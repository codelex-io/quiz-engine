<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="create questionRecords table" author="MikusZ">
        <createSequence sequenceName="question_sq_id"/>
        <createTable tableName="questionRecords">
            <column name="question_id"
                    type="bigint"
                    defaultValueSequenceNext="question_sq_id">
                <constraints primaryKey="true"
                             nullable="false"
                             primaryKeyName="pk_flights"/>
            </column>
            <column name="questionRecord"
                    type="text">
                <constraints nullable="false"/>
            </column>
            <column name="credits"
                    type="varchar(255)">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <createIndex tableName="questionRecords"
                     indexName="idx_question_id">
            <column name="question_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="create answerRecords table" author="MikusZ">
        <createSequence sequenceName="answer_sq_id"/>
        <createTable tableName="answerRecords">
            <column name="answer_id"
                    type="bigint"
                    defaultValueSequenceNext="answer_sq_id">
                <constraints primaryKey="true"
                             nullable="false"
                             primaryKeyName="pk_answers"/>
            </column>
            <column name="answerRecord"
                    type="text">
                <constraints nullable="false"/>
            </column>
            <column name="is_correct_answer"
                    type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="question_id"
                    type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="answerRecords"
                                 baseColumnNames="question_id"
                                 constraintName="fk_question_id_answer"
                                 referencedTableName="questionRecords"
                                 referencedColumnNames="question_id"/>
        <createIndex tableName="answerRecords"
                     indexName="idx_answers_id">
            <column name="answer_id"/>
        </createIndex>
        <createIndex tableName="answerRecords"
                     indexName="idx_answers_question_id">
            <column name="question_id"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>